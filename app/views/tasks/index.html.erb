<div class="row-fluid">
  <%- model_class = Task.new.class -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= msg %>
    </div>
  <% end %>
</div>

<div class="row-fluid">

  <div class="span3 offset1">
    <h3>Yesterday</h3>
    <ul class="unstyled">
      <%= render partial: :task, collection: @yesterdays_tasks %>
    </ul>
    <%= content_tag(:h3, 'Past Incomplete') unless @past_incomplete_tasks.empty? %>
    <ul class="unstyled">
      <%= render partial: :task, collection: @past_incomplete_tasks %>
    </ul>
  </div>

  <div id="today" class="span4">
    <h2>Today</h2>
    <ul class="unstyled">
      <%= render partial: 'form' %>
      <%= render partial: :task, collection: @todays_tasks %>
    </ul>
  </div>

  <div id="tomorrow" class="span3">
    <h3>Tomorrow</h3>
    <ul class="unstyled">
      <%= render partial: :task, collection: @tomorrows_tasks %>
    </ul>
  </div>
</div>