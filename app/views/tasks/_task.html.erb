<tr>
  <td>
    <%= link_to '<i class="icon-check"></i>'.html_safe,
                task_completion_path(task), :method => :post, :class => 'btn btn-mini' unless task.completed? %>
    <%= link_to '<i class="icon-check-empty"></i>'.html_safe,
                task_completion_path(task), :method => :delete, :class => 'btn btn-mini' if task.completed? %>
  </td>
  <td class="<%= 'completed' if task.completed? %>"><%= task.title %></td>
  <td>
    <%= link_to '<i class="icon-pencil"></i>'.html_safe,
                edit_task_path(task), :class => 'btn btn-mini' unless task.completed? %>
    <%= link_to '<i class="icon-trash"></i>'.html_safe,
                task_path(task),
                :method => :delete,
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>